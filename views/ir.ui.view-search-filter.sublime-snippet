<snippet>
    <content><![CDATA[
<filter string="${1:Name}"
    name="${2:${1/(([A-Za-z0-9])|( )|([^A-Za-z0-9]+))/(?2:\l$2)(?3:\_)(?4:\_)/g}}"
    domain="${3:[]}"
    context="${4:{}}"
    help="${5}" />${0}
]]></content>
    <tabTrigger>filter</tabTrigger>
    <scope>text.xml</scope>
    <description>Common filter tag to be added inside a search view</description>
</snippet>
